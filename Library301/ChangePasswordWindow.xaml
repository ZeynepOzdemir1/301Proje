<Window x:Class="Library301.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library301"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="150" Width="350" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Margin="5">
        <WrapPanel Margin="5">
            <TextBlock>Mevcut Şifreniz</TextBlock>
            <TextBox x:Name="txtCurrentPassword" Width="200"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="5">
            <TextBlock>Yeni Şifreniz</TextBlock>
            <TextBox x:Name="txtNewPassword1" Width="200"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="5">
            <TextBlock>Yeni Şifreniz</TextBlock>
            <TextBox x:Name="txtNewPassword2" Width="200"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Button Margin="5" Name="btnChange" Content="Değiştir" Click="btnChange_Click"></Button>
            <Button Margin="5" Name="btnCancel" Content="İptal" Click="btnCancel_Click"></Button>

        </WrapPanel>
    </StackPanel>
</Window>
