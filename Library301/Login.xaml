<Window x:Class="Library301.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library301"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>


        </Grid.RowDefinitions>
        <TextBlock Margin="0 5" Text="BOGAZICI UNIVERSITY LIBRARY" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFEC0E0E"/>
        <TextBlock  Text="School Number:" Grid.Row="1" Grid.Column="0" Margin="0,5" ></TextBlock>
        <TextBox x:Name="txtSchoolNumber" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5"></TextBox>

        <TextBlock Margin="0 5" Text="Password:" Grid.Row="2" Grid.Column="0"  ></TextBlock>
        <PasswordBox Margin="0 5" x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" PasswordChar="*" ></PasswordBox>

        <Button x:Name="btnLogin" Content="Log In" Grid.Row="3" Width="300" Height="50" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 5" Click="btnLogin_Click" />


    </Grid>
</Window>
